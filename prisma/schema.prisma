generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cake {
  id   Int    @id @default(autoincrement())
  name String
  size String
}

model Cupcake {
  id   Int    @id @default(autoincrement())
  name String
  size String
}

model Bakery {
  id   Int    @id @default(autoincrement())
  name String
  size String
}

model Cart {
  id          Int @id @default(autoincrement())
  userSession Int
  productId   Int
  amount      Int
}

