generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cake {
  id             Int           @id @default(autoincrement())
  name           String
  size           String
  price          Int
  OrderSummary   OrderSummary? @relation(fields: [orderSummaryId], references: [id])
  orderSummaryId Int?
}

model Cupcake {
  id             Int           @id @default(autoincrement())
  name           String
  size           String
  price          Int
  OrderSummary   OrderSummary? @relation(fields: [orderSummaryId], references: [id])
  orderSummaryId Int?
}

model Bakery {
  id             Int           @id @default(autoincrement())
  name           String
  size           String
  price          Int
  OrderSummary   OrderSummary? @relation(fields: [orderSummaryId], references: [id])
  orderSummaryId Int?
}

model Cart {
  id          Int    @id @default(autoincrement())
  userSession String
  productId   Int
  productType String
  amount      Int
}

model OrderSummary {
  id            Int       @id @default(autoincrement())
  name          String
  contactNumber String
  date          String
  time          String
  location      String
  cake          Cake[]
  cupcake       Cupcake[]
  bakery        Bakery[]
  mode          String
  userSession   String
}

